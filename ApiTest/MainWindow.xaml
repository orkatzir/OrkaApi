<Window x:Class="ApiTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
    <Grid Height="60" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
    </Grid>
    <Grid Height="200" VerticalAlignment="Bottom">
            <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16,0,15,10" Grid.ColumnSpan="4">
                <TextBox Uid="0" Width="50"  Margin="0,0,20,0"></TextBox>
                <ComboBox Uid="1" Width="50" Margin="0,0,20,0"></ComboBox>
                <ComboBox Uid="2" Width="50" Margin="0,0,20,0"></ComboBox>
                <TextBox Uid="3" Width="50"  Margin="0,0,20,0"></TextBox>
            </StackPanel>
                <Button HorizontalAlignment="Center" Click="Convert_Click">Convert</Button>

            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
